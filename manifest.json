{
    "manifest_version": 2,
    "name": "Pin Unpin Tab",
    "version": "2.0",
    "description": "Toggles pinned status of a tab through a customizable keyboard shortcut",
    "browser_action": {
        "default_icon": {
            "48": "icons/pin-48.png"
        }
    },
    "background": {
        "scripts": ["background-script.js"]
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content-script.js"]
        }
    ],
    "icons": {
        "48": "icons/pin-48.png"
    },
    "commands": {
        "toggle_pinned_status": {
            "description": "Default shortcut to toggle pinned status of the active tab",
            "suggested_key": {
                "default": "Alt+P"
            }
        }
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },
    "permissions": ["storage"]
}
